<%- include("../partials/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2 class="mt-5">Edit</h2>
            <h1><%= memory.title %></h1>
        </div>
        <div class="col-8 col-md-6 col-lg-4 mt-3">
            <form action="/memories/<%= memory._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[title]" value="<%= memory.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[images][0][url]" value="<%= memory.images[0].url %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[images][1][url]" value="<%= memory.images[1].url %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[images][2][url]" value="<%= memory.images[2].url %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[description]" value="<%= memory.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/memories/<%= memory._id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>