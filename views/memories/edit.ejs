<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= memory.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/memories/<%= memory._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[title]" value="<%= memory.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[image]" value="<%= memory.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[description]" value="<%= memory.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/memories/<%= memory._id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>