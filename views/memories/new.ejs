<%- include("../partials/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center mt-3">
            <h1 class="mt-5">Save a New Memory</h1>
        </div>
        <div class="col-8 col-md-6 col-lg-4 mt-3">
            <form action="/memories" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[images][0][url]" placeholder="image1 url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[images][1][url]" placeholder="image2 url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[images][2][url]" placeholder="image3 url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="memory[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>

            <a href="/memories" class="goback">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>