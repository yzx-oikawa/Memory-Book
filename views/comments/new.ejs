<%- include("../partials/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center mt-5">
            <h2 class="mt-5">Add New Comment to</h2>
            <h1><%= memory.title %></h1>
        </div>
        <div class="col-8 col-md-6 col-lg-4 mt-3">
            <form action="/memories/<%= memory._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/memories">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>