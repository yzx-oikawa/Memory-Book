<%- include("../partials/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center mt-5">
            <h1 class="mt-5">Edit Comment</h1>
        </div>
        <div class="col-8 col-md-6 col-lg-4 mt-3">
            <form action="/memories/<%= memory_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/memories/<%= memory_id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>